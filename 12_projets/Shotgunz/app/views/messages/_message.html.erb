<div id="message-<%= message.id %>" class="message">
  <small>
    <strong class="<%= current_user.username == message.user.username ? "my-messages" : "other-messages" %>"><%= message.user.username %></strong>
    <i><%= message.created_at.in_time_zone("Europe/Paris").strftime("%b %e at %l:%M %p") %></i>
  </small>
  <p class="<%= current_user.username == message.user.username ? "my-messages" : "other-messages" %>"><%= message.content %></p>
</div>
