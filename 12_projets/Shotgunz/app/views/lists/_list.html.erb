<div class="alexis-marketplace-card">
  <div class="alexis-marketplace-card-element">
    <%= link_to "", list_path(list), class:"alexis-click"%>
    <div class="alexis-card-left-element">
      <%= link_to list.name.titleize, list_path(list) %>
      <% if list.shotguns.count == 0 %>
        <p><span><%= list.places %> shotguns available</span> out of <span><%= list.places %></span></p>
      <% elsif list.shotguns.count > 0 && list.shotguns.count < list.places %>
        <p><span><%= list.shotguns.count %> shotguns</span> out of <span><%= list.places %></span></p>
      <% else %>
        <p><span><%= list.shotguns.count%> / <%=list.places%></span> - Waiting List</p>
      <% end %>
      <div class="alexis-user-email">
        <p><span>Created by: </span><%= list.user.username.capitalize %></p>
      </div>
    </div>
    <div class="alexis-card-right-element">
      <p>Finishes <%=list.end_time.strftime('%A %-d %b')%></p>
      <div class="alexis-card-show-btn">
        <i class="fas fa-chevron-right"><%= link_to "", list_path(list), class:"alexis-market-show-btn" %></i>
      </div>
    </div>
  </div>
</div>
